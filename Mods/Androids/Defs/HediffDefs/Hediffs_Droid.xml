<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<HediffDef ParentName="DiseaseBase">
		<defName>ChjAndroidDroidFaultySupport</defName>
		<label>faulty support</label>
		<labelNoun>a faulty support</labelNoun>
		<description>The structural support is failing.</description>
		<minSeverity>0.0</minSeverity>
		<maxSeverity>1.0</maxSeverity>
		<stages>
			<li>
				<becomeVisible>false</becomeVisible>
			</li>
			<li>
				<label>extreme</label>
				<minSeverity>0.2</minSeverity>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.30</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.10</offset>
					</li>
				</capMods>
			</li>
		</stages>
		<modExtensions>
			<li Class="Androids.MechanicalHediffProperties"/>
		</modExtensions>
	</HediffDef>

	<HediffDef ParentName="DiseaseBase">
		<defName>ChjAndroidDroidWornOut</defName>
		<label>worn out</label>
		<labelNoun>worn out</labelNoun>
		<description>This part is slowly getting worn out. Not critical but will over a long time detoriate.</description>
		<minSeverity>0.0</minSeverity>
		<maxSeverity>1.0</maxSeverity>
		<stages>
			<li>
				<becomeVisible>false</becomeVisible>
			</li>
			<li>
				<label>minor</label>
				<minSeverity>0.2</minSeverity>
				<partEfficiencyOffset>-0.1</partEfficiencyOffset>
			</li>
			<li>
				<label>major</label>
				<minSeverity>0.4</minSeverity>
				<partEfficiencyOffset>-0.3</partEfficiencyOffset>
			</li>
			<li>
				<label>severe</label>
				<minSeverity>0.6</minSeverity>
				<partEfficiencyOffset>-0.5</partEfficiencyOffset>
			</li>
			<li>
				<label>extreme</label>
				<minSeverity>0.8</minSeverity>
				<partEfficiencyOffset>-0.8</partEfficiencyOffset>
			</li>
		</stages>
		<modExtensions>
			<li Class="Androids.MechanicalHediffProperties"/>
		</modExtensions>
	</HediffDef>

	<HediffDef ParentName="DiseaseBase">
		<defName>ChjAndroidDroidFaultyLightSensor</defName>
		<label>faulty light sensor</label>
		<labelNoun>a faulty light sensor</labelNoun>
		<description>The light sensors can't properly process light data.</description>
		<minSeverity>0.0</minSeverity>
		<maxSeverity>1.0</maxSeverity>
		<stages>
			<li>
				<becomeVisible>false</becomeVisible>
			</li>
			<li>
				<label>extreme</label>
				<minSeverity>0.2</minSeverity>
				<partEfficiencyOffset>-0.5</partEfficiencyOffset>
			</li>
		</stages>
		<modExtensions>
			<li Class="Androids.MechanicalHediffProperties"/>
		</modExtensions>
	</HediffDef>

	<HediffDef ParentName="DiseaseBase">
		<defName>ChjAndroidDroidCorruptMemory</defName>
		<label>corrupt memory</label>
		<description>The working memory is corrupted. Will cause glitches if not amended.</description>
		<minSeverity>0.0</minSeverity>
		<maxSeverity>1.0</maxSeverity>
		<stages>
			<li>
				<becomeVisible>false</becomeVisible>
			</li>
			<li>
				<label>extreme</label>
				<minSeverity>0.2</minSeverity>
				<partEfficiencyOffset>-0.15</partEfficiencyOffset>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.25</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.25</offset>
					</li>
				</capMods>
				<mentalStateGivers>
					<li>
						<mentalState>WanderConfused</mentalState>
						<mtbDays>5</mtbDays>
					</li>
				</mentalStateGivers>
			</li>
		</stages>
		<modExtensions>
			<li Class="Androids.MechanicalHediffProperties"/>
		</modExtensions>
	</HediffDef>
</Defs>