<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<HediffDef>
		<defName>ChjCoolantLoss</defName>
		<label>coolant loss</label>
		<description>This machine is bleeding out coolant. Fix the leaking before it overheat and explode!</description>
		<hediffClass>Skynet.Hediff_Percentage</hediffClass>
		<maxSeverity>1.0</maxSeverity>
		<stages>
			<li>
				<label>hidden</label>
				<becomeVisible>false</becomeVisible>
			</li>
			<li>
				<minSeverity>0.15</minSeverity>
				<label>minor</label>
			</li>
			<li>
				<minSeverity>0.30</minSeverity>
				<label>moderate</label>
			</li>
			<li>
				<minSeverity>0.45</minSeverity>
				<label>severe</label>
			</li>
			<li>
				<minSeverity>0.60</minSeverity>
				<label>extreme</label>
				<lifeThreatening>true</lifeThreatening>
			</li>
		</stages>
	</HediffDef>

	<HediffDef>
		<defName>ChjOverheating</defName>
		<label>overheating</label>
		<description>This machine is overheating critically! Immediatly fix before it explodes!</description>
		<hediffClass>Skynet.Hediff_Percentage</hediffClass>
		<lethalSeverity>1</lethalSeverity>
		<everCurableByItem>false</everCurableByItem>
		<stages>
			<li>
				<label>hidden</label>
				<becomeVisible>false</becomeVisible>
			</li>
			<li>
				<minSeverity>0.15</minSeverity>
				<label>minor</label>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.1</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.30</minSeverity>
				<label>moderate</label>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.2</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.50</minSeverity>
				<label>severe</label>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.3</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.70</minSeverity>
				<label>extreme</label>
				<lifeThreatening>true</lifeThreatening>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.4</setMax>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>
	
	<HediffDef>
		<defName>ChjPowerShortage</defName>
		<label>power shortage</label>
		<description>This machine is now in power saving mode due to power shortage.</description>
		<stages>
			<li>
				<minSeverity>0.0</minSeverity>
				<label>extreme</label>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.5</setMax>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<setMax>0.5</setMax>
					</li>
					<li>
						<capacity>Moving</capacity>
						<setMax>0.3</setMax>
					</li>
					<li>
						<capacity>Hearing</capacity>
						<setMax>0.2</setMax>
					</li>
					<li>
						<capacity>Sight</capacity>
						<setMax>0.15</setMax>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>

	<HediffDef>
		<defName>ChjPowerFailure</defName>
		<label>power failure</label>
		<description>This machine shut off permanently due to all power being gone. It would be futile to restart because the original personality is long gone.</description>
		<stages>
			<li>
				<minSeverity>0.0</minSeverity>
				<label>extreme</label>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.3</setMax>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<setMax>0.2</setMax>
					</li>
					<li>
						<capacity>Moving</capacity>
						<setMax>0.2</setMax>
					</li>
					<li>
						<capacity>Hearing</capacity>
						<setMax>0.1</setMax>
					</li>
					<li>
						<capacity>Sight</capacity>
						<setMax>0.1</setMax>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>
	
</Defs>