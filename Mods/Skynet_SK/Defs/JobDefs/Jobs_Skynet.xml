<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<JobDef>
		<defName>ExecuteSkynet</defName>
		<driverClass>Skynet.JobDriver_ExecuteSkynet</driverClass>
		<allowOpportunisticPrefix>true</allowOpportunisticPrefix>
	</JobDef>

	<JobDef>
		<defName>FindHuntPos</defName>
		<driverClass>Skynet.JobDriver_FindHuntPos</driverClass>
		<reportString>hunting TargetA.</reportString>
		<alwaysShowWeapon>true</alwaysShowWeapon>
	</JobDef>

	<JobDef>
		<defName>Recharge</defName>
		<driverClass>Skynet.JobDriver_RechargeEnergy</driverClass>
		<reportString>recharging at TargetA.</reportString>
		<casualInterruptible>false</casualInterruptible>
		<suspendable>false</suspendable>
	</JobDef>
	
	<JobDef>
		<defName>Hibernate</defName>
		<driverClass>Skynet.JobDriver_Hibernate</driverClass>
		<reportString>hibernating at TargetA.</reportString>
	</JobDef>

</Defs>