   <RecipeDef ParentName="lifesupportbase">
      <defName>installlifesupportheart</defName>
      <label>Install Blood Pump</label>
      <description>Installs a Blood Pump.</description>
      <jobString>Installing Blood Pump.</jobString>
      <workerClass>Recipe_InstallArtificialBodyPart</workerClass>
      <workAmount>3600</workAmount>
      <ingredients>
         <li>
            <filter>
               <categories>
                  <li>Medicine</li>
               </categories>
            </filter>
            <count>1</count>
         </li>
         <li>
            <filter>
               <thingDefs>
                  <li>lifesupport</li>
               </thingDefs>
            </filter>
            <count>1</count>
         </li>
      </ingredients>
      <fixedIngredientFilter>
         <categories>
            <li>Medicine</li>
         </categories>
         <thingDefs>
            <li>lifesupport</li>
         </thingDefs>
      </fixedIngredientFilter>
      <appliedOnFixedBodyParts>
         <li>Heart</li>
      </appliedOnFixedBodyParts>
      <addsHediff>lifesupportheart</addsHediff>
		<skillRequirements>
			<Medicine>5</Medicine>
		</skillRequirements>
    <researchPrerequisite>HospitalBed</researchPrerequisite>
   </RecipeDef>

   
