<?xml version="1.0" encoding="UTF-8"?>

<Defs>

	<HediffDef Name="addedPartPropsBaseSimplePrsts" Abstract="True">
		<hediffClass>Hediff_AddedPart</hediffClass>
		<isBad>false</isBad>
		<defaultLabelColor>(102,178,255)</defaultLabelColor>
		<addedPartProps>
			<solid>true</solid>
			<betterThanNatural>false</betterThanNatural>
		</addedPartProps>
	</HediffDef>

	<!-- Added body parts -->

	<HediffDef ParentName="addedPartPropsBaseSimplePrsts">
		<defName>GlassEye</defName>
		<label>glass eye</label>
		<labelNoun>a glass eye</labelNoun>
		<addedPartProps>
			<partEfficiency>1.0</partEfficiency>
		</addedPartProps>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.5</offset>
					</li>
					<li>
						<capacity>Talking</capacity>
						<offset>0.09</offset>
					</li>
				</capMods>
			</li>	 
		</stages>

		<spawnThingOnRemoved>GlassEye</spawnThingOnRemoved>
	</HediffDef>



	<HediffDef ParentName="addedPartPropsBaseSimplePrsts">
		<defName>SimpleProstheticHand</defName>
		<label>simple prosthetic hand</label>
		<labelNoun>a glass eye</labelNoun>
		<addedPartProps>
			<partEfficiency>0.7</partEfficiency>
		</addedPartProps>
		<spawnThingOnRemoved>SimpleProstheticHand</spawnThingOnRemoved>
	</HediffDef>


