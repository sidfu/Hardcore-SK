<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Lifesupport -->

	<HediffDef Name="addedPartPropsBase" Abstract="True">
		<hediffClass>Hediff_AddedPart</hediffClass>  
		<isBad>false</isBad>
		<addedPartProps>
			<solid>true</solid>
			<betterThanNatural>false</betterThanNatural>
		</addedPartProps>
	</HediffDef>


	<HediffDef ParentName="addedPartPropsBase">
		<defName>lifesupportheart</defName>
		<label>blood pump</label>
		<labelNoun>a blood pump</labelNoun>
		<addedPartProps>
			
			<partEfficiency>0.6</partEfficiency>
		</addedPartProps>
		<spawnThingOnRemoved>lifesupport</spawnThingOnRemoved>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>BloodPumping</capacity>
						<setMax>1</setMax>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>


	<HediffDef ParentName="addedPartPropsBase">
		<defName>lifesupportlung</defName>
		<label>respirator</label>
		<labelNoun>a respirator</labelNoun>
		<addedPartProps>
			
			<partEfficiency>0.3</partEfficiency>
		</addedPartProps>
		<spawnThingOnRemoved>lifesupport</spawnThingOnRemoved>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>Breathing</capacity>
						<setMax>1</setMax>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>


	<HediffDef ParentName="addedPartPropsBase">
		<defName>lifesupportkidney</defName>
		<label>urine filter</label>
		<labelNoun>an urine filter</labelNoun>
		<addedPartProps>
			
			<partEfficiency>0.3</partEfficiency>
		</addedPartProps>
		<spawnThingOnRemoved>lifesupport</spawnThingOnRemoved>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>BloodFiltration</capacity>
						<setMax>1</setMax>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>


	<HediffDef ParentName="addedPartPropsBase">
		<defName>lifesupportliver</defName>
		<label>blood filter</label>
		<labelNoun>a blood filter</labelNoun>
		<addedPartProps>
			
			<partEfficiency>0.6</partEfficiency>
		</addedPartProps>
		<spawnThingOnRemoved>lifesupport</spawnThingOnRemoved>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>BloodFiltration</capacity>
						<setMax>1</setMax>
					</li>
					<li>
						<capacity>Metabolism</capacity>
						<setMax>1</setMax>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>

	<HediffDef ParentName="addedPartPropsBase">
		<defName>lifesupportstomach</defName>
		<label>feedingtube</label>
		<labelNoun>a feeding tube</labelNoun>
		<addedPartProps>
			
			<partEfficiency>0.3</partEfficiency>
		</addedPartProps>
		<spawnThingOnRemoved>lifesupport</spawnThingOnRemoved>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>Eating</capacity>
						<setMax>1</setMax>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>

</Defs>
