<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <!-- VINTOREZ -->
    <ThingDef ParentName="BaseGun_LongBarreled">
        <defName>Gun_Vintorez</defName>
        <label>VSS Thread Cutter</label>
        <description>Special forces sniper rifle VSS Vintorez.\nCaliber: 9x39 mm</description>
        <graphicData>
            <texPath>Things/Weapons/Vintorez</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <soundInteract>Interact_Rifle</soundInteract>
        <statBases>
            <MarketValue>1520</MarketValue>
            <SightsEfficiency>1.35</SightsEfficiency>
            <ShotSpread>0.032</ShotSpread>
            <SwayFactor>1.0</SwayFactor>
            <RangedWeapon_Cooldown>0.55</RangedWeapon_Cooldown>
            <Bulk>9.2</Bulk>
            <Mass>2.9</Mass>
        </statBases>
		<equippedStatOffsets>
			<HuntingStealth>0.75</HuntingStealth>
		</equippedStatOffsets>
        <weaponTags>
            <li>SNIP3</li>
            <li>SniperRifle</li>
            <li>TierTwoSniper</li>
            <li>TierThreeSniper</li>
            <li>CE_AI_Rifle</li>
            <li>RK_HT_RF</li>
            <li>HMC_IT_SNP_RF</li>
        </weaponTags>
        <thingCategories>
            <li>SRifles</li>
        </thingCategories>
        <verbs>
            <li Class="CombatExtended.VerbPropertiesCE">
			    <recoilAmount>1.0</recoilAmount>
                <verbClass>CombatExtended.Verb_ShootCE</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>Bullet_9x39mmSoviet_FMJ</defaultProjectile>
                <burstShotCount>3</burstShotCount>
                <ticksBetweenBurstShots>5</ticksBetweenBurstShots>
                <warmupTime>0.55</warmupTime>
                <range>42</range>
                <soundCast>SK_shotVintorez</soundCast>
                <soundCastTail>GunTail_Medium</soundCastTail>
                <muzzleFlashScale>9</muzzleFlashScale>
            </li>
        </verbs>
        <comps>
            <li Class="CombatExtended.CompProperties_FireModes">
                <aiUseBurstMode>FALSE</aiUseBurstMode>
                <aiAimMode>AimedShot</aiAimMode>
                <aimedBurstShotCount>2</aimedBurstShotCount>
            </li>
            <li Class="CombatExtended.CompProperties_AmmoUser">
                <magazineSize>20</magazineSize>
                <reloadTime>2.2</reloadTime>
                <ammoSet>AmmoSet_9x39mmSoviet</ammoSet>
            </li>
        </comps>
        <smeltProducts>
            <Sniper_Component>1</Sniper_Component>
            <Weapon_Parts>8</Weapon_Parts>
			<Plastic>5</Plastic>
        </smeltProducts>
    </ThingDef>

