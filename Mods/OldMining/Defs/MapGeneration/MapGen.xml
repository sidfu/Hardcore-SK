<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Mineral deposits -->
	<GenStepDef>
		<defName>MineralDeposits</defName>
		<order>503</order>
		<genStep Class="GenStep_ScatterThings">
			<thingDef>MineralDeposits</thingDef>
			<allowInWaterBiome>false</allowInWaterBiome>
			<minSpacing>25</minSpacing>
			<extraNoBuildEdgeDist>4</extraNoBuildEdgeDist>
			<countPer10kCellsRange>1.3~2.1</countPer10kCellsRange>
			<clearSpaceSize>30</clearSpaceSize>
			<terrainValidationRadius>4</terrainValidationRadius>
			<terrainValidationDisallowed>
				<li>Road</li>
				<li>Mud</li>
				<li>Marsh</li>
				<li>MarshyTerrain</li>
				<li>WaterDeep</li>
				<li>WaterMovingDeep</li>
				<li>WaterShallow</li>
				<li>WaterMovingShallow</li>
				<li>WaterOceanShallow</li>
				<li>WaterOceanDeep</li>
			</terrainValidationDisallowed>
			<validators>
				<li Class="ScattererValidator_Buildable">
					<radius>4</radius>
					<affordance>Heavy</affordance>
				</li>
				<li Class="ScattererValidator_NoNonNaturalEdifices">
					<radius>4</radius>
				</li>
			</validators>
		</genStep>
	</GenStepDef>

	<!-- Rare mineral deposits -->
	<GenStepDef>
		<defName>RareMineralDeposits</defName>
		<order>504</order>
		<genStep Class="GenStep_ScatterThings">
			<thingDef>RareMineralDeposits</thingDef>
			<allowInWaterBiome>false</allowInWaterBiome>
			<minSpacing>25</minSpacing>
			<extraNoBuildEdgeDist>4</extraNoBuildEdgeDist>
			<countPer10kCellsRange>0.5~0.8</countPer10kCellsRange>
			<clearSpaceSize>30</clearSpaceSize>
			<terrainValidationRadius>4</terrainValidationRadius>
			<terrainValidationDisallowed>
				<li>Road</li>
				<li>Mud</li>
				<li>Marsh</li>
				<li>MarshyTerrain</li>
				<li>WaterDeep</li>
				<li>WaterMovingDeep</li>
				<li>WaterShallow</li>
				<li>WaterMovingShallow</li>
				<li>WaterOceanShallow</li>
				<li>WaterOceanDeep</li>
			</terrainValidationDisallowed>
			<validators>
				<li Class="ScattererValidator_Buildable">
					<radius>4</radius>
					<affordance>Heavy</affordance>
				</li>
				<li Class="ScattererValidator_NoNonNaturalEdifices">
					<radius>4</radius>
				</li>
			</validators>
		</genStep>
	</GenStepDef>

</Defs>