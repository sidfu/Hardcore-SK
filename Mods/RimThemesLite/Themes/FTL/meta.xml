<?xml version="1.0" encoding="UTF-8"?>
<RimThemes>
 <!-- The default fonts and size unsed if there is no custom font for particular language matching player's RimWorld current active language
  You can set for example only Medium and Small one, then the unset Tiny font and size will be as the default Vanilla -->
  
  <customFontTinyDefault>Minecraft</customFontTinyDefault>	<!-- [2019R3 min] Set the default font used for tiny text-->
  <customFontSmallDefault>Minecraft</customFontSmallDefault>	<!-- [2019R3 min] Set the default font used for small text-->
  <customFontMediumDefault>Minecraft</customFontMediumDefault><!-- [2019R3 min] Set the default font used for medium text-->
  
  <customFontSizeTinyDefault>10</customFontSizeTinyDefault>			<!-- [2019R3 min] Set the default font size of tiny text -->
  <customFontSizeSmallDefault>12</customFontSizeSmallDefault>		<!-- [2019R3 min] Set the default font size of small text -->
  <customFontSizeMediumDefault>16</customFontSizeMediumDefault>     <!-- [2019R3 min] Set the default font size of medium text -->
  
  

  
  <customFontTinyGerman>Corleone</customFontTinyGerman>
  <customFontSmallGerman>Corleone</customFontSmallGerman>
  <customFontMediumGerman>Corleone</customFontMediumGerman>
  
  <customFontSizeTinyGerman>12</customFontSizeTinyGerman>
  <customFontSizeSmallGerman>14</customFontSizeSmallGerman>
  <customFontSizeMediumGerman>16</customFontSizeMediumGerman>  -->
  
  <tapestryScaleMode>ScaleAndCrop</tapestryScaleMode>				<!-- [2019R3 min] : Mode used to draw tapestry textures, can be (StretchToFill (by default),ScaleAndCrop,ScaleToFit) see https://docs.unity3d.com/ScriptReference/ScaleMode.ScaleToFit.html to have more information about each -->
  
  <description>A theme that makes Rimworld look like FTL!</description>    				<!-- The description showed in the theme manager dialog -->
  <particleMode>disable</particleMode>                  				<!-- How display on buttons the icon stored in Misc/Particle.png file (mono : one on the left, dual : two at left and right (by default if there is an icon), none : disable this feature) -->
  <windowAnim>none</windowAnim>                      				<!-- Window appear animation to use (clip, slideLeft, slideTop, slideRight, slideBottom, none)-->
  <category>games</category>						 				<!-- Theme's category (can be one of the following values : "future", "medieval", "nature", "horror","wtf","games","historic","technology","other")-->
  <dialogStacking>true</dialogStacking>								<!-- [2019R2 min] : If false disable the dialog stacking (usefull essentially for transparent themes), by default true -->
  <disableMainRimthemesLogo>false</disableMainRimthemesLogo>		<!-- [2019R2 min] : If true hide the display of RimTheme logo in the main menu (bottom left), by default false -->
  <disableMainThemeSelector>false</disableMainThemeSelector>    	<!-- [2019R2 min] : If true hide the theme selector in the main menu (bottom right), by default false -->
  <menuAlignment>right</menuAlignment>								<!-- The alignment of RimWorld's main menu (can be left, middle, right), by default right) -->
  <!--<buttonnotex>true</buttonnotex>                			     If true disable texture drawing on buttons -->

</RimThemes>