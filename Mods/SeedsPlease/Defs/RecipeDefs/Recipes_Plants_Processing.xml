<?xml version="1.0" encoding="utf-8"?>
<Defs>
 
  <RecipeDef ParentName="ExtractSeed">
    <defName>ExtractSeedHealroot</defName>
    <label>extract healroot seeds</label>
    <description>Extract seeds from Raw Healroot.</description>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>MedicineHerbal</li>
          </thingDefs>
        </filter>
        <count>6</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>MedicineHerbal</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Seed_Healroot>1</Seed_Healroot>
    </products>
  </RecipeDef>

  <RecipeDef ParentName="ExtractSeed">
    <defName>ExtractSeed_Cocoa</defName>
    <label>extract cocoa seeds</label>
    <description>Extract seeds from Cocoa Beans</description>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>RawCocoaBeans</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>RawCocoaBeans</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Seed_Cocoa>3</Seed_Cocoa>
    </products>
  </RecipeDef>
  
  <RecipeDef>
    <defName>ProcessRawCocoa</defName>
    <label>make chocolate</label>
    <description>Cocoa Beans grinded with sweeteners and cooked into Chocolate.</description>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>RawCocoaBeans</li>
          </thingDefs>
        </filter>
        <count>12</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>RawCocoaBeans</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Chocolate>15</Chocolate>
    </products>
    <workAmount>400</workAmount>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <workSkill>Cooking</workSkill>
    <skillRequirements>
      <Cooking>2</Cooking>
    </skillRequirements>
    <recipeUsers>
      <li>FueledStove</li>
      <li>ElectricStove</li>
    </recipeUsers>
  </RecipeDef>  

  
</Defs>
