<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Facial Stuff</li>
		</mods>
		<success>Always</success>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName = "SkynetCovert"]/comps</xpath>
					<value>
						<li Class = "FacialStuff.CompProperties_BodyAnimator">
							<bipedWithHands>true</bipedWithHands>
							<handType>Human</handType>
							<bodyDrawers>
								<li Class ="FacialStuff.HumanBipedDrawer"/>
							</bodyDrawers>
						</li>
						<li Class = "FacialStuff.CompProperties_Face">
							<needsBlankHumanHead>true</needsBlankHumanHead>
							<hasMouth>true</hasMouth>
							<hasBeard>true</hasBeard>
							<hasWrinkles>true</hasWrinkles>
							<hasEyes>true</hasEyes>
							<canRotateHead>true</canRotateHead>
							<headDrawers>
								<li Class ="Skynet.SkynetFaceRender"/>
							</headDrawers>
						</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName = "SkynetAgent"]/comps</xpath>
					<value>
						<li Class = "FacialStuff.CompProperties_BodyAnimator">
							<bipedWithHands>true</bipedWithHands>
							<handType>Human</handType>
							<bodyDrawers>
								<li Class ="FacialStuff.HumanBipedDrawer"/>
							</bodyDrawers>
						</li>
						<li Class = "FacialStuff.CompProperties_Face">
							<needsBlankHumanHead>true</needsBlankHumanHead>
							<hasMouth>true</hasMouth>
							<hasBeard>false</hasBeard>
							<hasWrinkles>true</hasWrinkles>
							<hasEyes>true</hasEyes>
							<canRotateHead>true</canRotateHead>
							<headDrawers>
								<li Class ="Skynet.SkynetFaceRender"/>
							</headDrawers>
						</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName = "SkynetPrototypeTX"]/comps</xpath>
					<value>
						<li Class = "FacialStuff.CompProperties_BodyAnimator">
							<bipedWithHands>true</bipedWithHands>
							<handType>Human</handType>
							<bodyDrawers>
								<li Class ="FacialStuff.HumanBipedDrawer"/>
							</bodyDrawers>
						</li>
						<li Class = "FacialStuff.CompProperties_Face">
							<needsBlankHumanHead>true</needsBlankHumanHead>
							<hasMouth>true</hasMouth>
							<hasBeard>false</hasBeard>
							<hasWrinkles>true</hasWrinkles>
							<hasEyes>true</hasEyes>
							<canRotateHead>true</canRotateHead>
							<headDrawers>
								<li Class ="Skynet.SkynetFaceRender"/>
							</headDrawers>
						</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName = "SkynetInfiltrator"]/comps</xpath>
					<value>
						<li Class = "FacialStuff.CompProperties_BodyAnimator">
							<bipedWithHands>true</bipedWithHands>
							<handType>Human</handType>
							<bodyDrawers>
								<li Class ="FacialStuff.HumanBipedDrawer"/>
							</bodyDrawers>
						</li>
						<li Class = "FacialStuff.CompProperties_Face">
							<needsBlankHumanHead>true</needsBlankHumanHead>
							<hasMouth>true</hasMouth>
							<hasBeard>false</hasBeard>
							<hasWrinkles>true</hasWrinkles>
							<hasEyes>true</hasEyes>
							<canRotateHead>true</canRotateHead>
							<headDrawers>
								<li Class ="Skynet.SkynetFaceRender"/>
							</headDrawers>
						</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>

</Patch>